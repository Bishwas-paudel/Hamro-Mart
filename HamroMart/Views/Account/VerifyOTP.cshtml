@model HamroMart.ViewModels.VerifyOTPViewModel
@{
    ViewData["Title"] = "Verify OTP";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0"><i class="fas fa-shield-alt me-2"></i>Verify Email</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <p class="text-muted mb-4">
                        We've sent a 6-digit verification code to <strong>@Model.Email</strong>.
                        Please enter the code below to verify your email address.
                    </p>

                    <form asp-action="VerifyOTP" method="post" id="otpForm">
                        <input type="hidden" asp-for="Email" />

                        <div class="mb-3">
                            <label asp-for="OTP" class="form-label">Verification Code</label>
                            <input asp-for="OTP" class="form-control form-control-lg text-center"
                                   placeholder="000000" maxlength="6"
                                   style="font-size: 1.5rem; letter-spacing: 0.5em;" />
                            <span asp-validation-for="OTP" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check me-2"></i>Verify & Complete Registration
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted">Didn't receive the code?</p>
                        <button type="button" class="btn btn-outline-secondary" id="resendOtp">
                            <i class="fas fa-redo me-2"></i>Resend OTP
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Auto-tab between OTP digits
            $('input[placeholder="000000"]').on('input', function() {
                if (this.value.length === 6) {
                    $('#otpForm').submit();
                }
            });

            // Resend OTP functionality
            $('#resendOtp').click(function() {
                const button = $(this);
                const email = '@Model.Email';

                button.prop('disabled', true);
                button.html('<i class="fas fa-spinner fa-spin me-2"></i>Resending...');

                $.post('@Url.Action("ResendOTP")', { email: email })
                    .done(function(response) {
                        if (response.success) {
                            showToast('New OTP sent successfully!', 'success');
                        } else {
                            showToast(response.message, 'error');
                        }
                    })
                    .fail(function() {
                        showToast('Error resending OTP', 'error');
                    })
                    .always(function() {
                        setTimeout(() => {
                            button.prop('disabled', false);
                            button.html('<i class="fas fa-redo me-2"></i>Resend OTP');
                        }, 30000); // Enable after 30 seconds
                    });
            });

            function showToast(message, type) {
                const toast = $(`<div class="toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0 position-fixed bottom-0 end-0 m-3" role="alert">
                    <div class="d-flex">
                        <div class="toast-body">${message}</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>`);

                $('body').append(toast);
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();

                toast.on('hidden.bs.toast', function() {
                    $(this).remove();
                });
            }
        });
    </script>
}