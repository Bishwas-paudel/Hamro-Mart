@model HamroMart.ViewModels.ProductViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Products")">Products</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Products", new { categoryId = Model.CategoryId })">@Model.CategoryName</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded"
                         onerror="this.src='/images/placeholder.jpg'" style="max-height: 400px; object-fit: cover;">

                    @if (Model.HasDiscount)
                    {
                        <div class="mt-3">
                            <span class="badge bg-danger fs-6">Save @Model.DiscountPercentage.ToString("0")%</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="h3 fw-bold">@Model.Name</h1>

                    <div class="mb-3">
                        <span class="badge bg-success">@Model.Brand</span>
                        <span class="badge bg-secondary">@Model.Unit</span>
                        @if (!Model.IsInStock)
                        {
                            <span class="badge bg-danger">Out of Stock</span>
                        }
                    </div>

                    <div class="price-section mb-4">
                        @if (Model.HasDiscount)
                        {
                            <div>
                                <span class="text-danger fw-bold fs-2">Rs. @Model.FinalPrice.ToString("N2")</span>
                                <span class="text-muted text-decoration-line-through fs-4 ms-2">Rs. @Model.Price.ToString("N2")</span>
                            </div>
                        }
                        else
                        {
                            <span class="text-success fw-bold fs-2">Rs. @Model.Price.ToString("N2")</span>
                        }
                    </div>

                    <div class="product-meta mb-4">
                        <div class="row">
                            <div class="col-6">
                                <small class="text-muted">Category</small>
                                <div class="fw-semibold">@Model.CategoryName</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Availability</small>
                                <div class="fw-semibold @(Model.IsInStock ? "text-success" : "text-danger")">
                                    @(Model.IsInStock ? "In Stock" : "Out of Stock")
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="description mb-4">
                        <h6 class="fw-bold">Description</h6>
                        <p class="text-muted">@(string.IsNullOrEmpty(Model.Description) ? "No description available." : Model.Description)</p>
                    </div>

                    @if (Model.IsInStock)
                    {
                        <div class="add-to-cart-section">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <div class="input-group input-group-sm" style="width: 120px;">
                                        <button class="btn btn-outline-secondary" type="button" id="decrease-qty">-</button>
                                        <input type="number" class="form-control text-center" id="quantity" value="1" min="1" max="@Model.StockQuantity">
                                        <button class="btn btn-outline-secondary" type="button" id="increase-qty">+</button>
                                    </div>
                                </div>
                                <div class="col">
                                    <button class="btn btn-success btn-sm w-100 add-to-cart"
                                            data-product-id="@Model.Id"
                                            data-product-name="@Model.Name">
                                        <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                    </button>
                                </div>
                            </div>
                            <small class="text-muted mt-2 d-block">
                                Only @Model.StockQuantity items left in stock!
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            This product is currently out of stock. Check back later!
                        </div>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="admin-actions mt-4 pt-3 border-top">
                            <h6 class="fw-bold">Admin Actions</h6>
                            <div class="btn-group">
                                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit me-2"></i>Edit
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to delete this product?')">
                                        <i class="fas fa-trash me-2"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    @if (ViewBag.RelatedProducts != null && ((List<HamroMart.ViewModels.ProductViewModel>)ViewBag.RelatedProducts).Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="mb-4">Related Products</h3>
                <div class="row g-3">
                    @foreach (var product in (List<HamroMart.ViewModels.ProductViewModel>)ViewBag.RelatedProducts)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            <div class="card product-card h-100 border-0 shadow-sm">
                                <div class="product-image position-relative">
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name"
                                         onerror="this.src='/images/placeholder.jpg'" style="height: 150px; object-fit: cover;">

                                    @if (product.HasDiscount)
                                    {
                                        <span class="badge bg-danger discount-badge">-@product.DiscountPercentage.ToString("0")%</span>
                                    }
                                </div>

                                <div class="card-body">
                                    <h6 class="card-title product-name">@product.Name</h6>
                                    <p class="card-text text-muted small mb-2">@product.Brand • @product.Unit</p>

                                    <div class="price-section mb-3">
                                        @if (product.HasDiscount)
                                        {
                                            <span class="text-danger fw-bold">Rs. @product.FinalPrice.ToString("N2")</span>
                                            <span class="text-muted text-decoration-line-through small ms-2">Rs. @product.Price.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-success fw-bold">Rs. @product.Price.ToString("N2")</span>
                                        }
                                    </div>

                                    <div class="d-grid gap-2">
                                        @if (product.IsInStock)
                                        {
                                            <button class="btn btn-success btn-sm w-100 add-to-cart"
                                                    data-product-id="@product.Id"
                                                    data-product-name="@product.Name">
                                                <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                            </button>
                                        }
                                        <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-2"></i>View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Quantity controls
            $('#increase-qty').click(function() {
                const input = $('#quantity');
                const max = parseInt(input.attr('max'));
                let value = parseInt(input.val());
                if (value < max) {
                    input.val(value + 1);
                }
            });

            $('#decrease-qty').click(function() {
                const input = $('#quantity');
                let value = parseInt(input.val());
                if (value > 1) {
                    input.val(value - 1);
                }
            });

            // Add to cart with quantity
            $('#add-to-cart-btn').click(function() {
                const productId = $(this).data('product-id');
                const quantity = parseInt($('#quantity').val());
                const button = $(this);

                button.html('<i class="fas fa-spinner fa-spin me-2"></i>Adding...');
                button.prop('disabled', true);

                // Simulate API call
                setTimeout(function() {
                    showToast(`${quantity} item(s) added to cart successfully!`, 'success');

                    button.html('<i class="fas fa-cart-plus me-2"></i>Add to Cart');
                    button.prop('disabled', false);

                    updateCartCount();
                }, 1000);
            });

            // Related products add to cart
            $('.add-to-cart').click(function() {
                const productId = $(this).data('product-id');
                const button = $(this);

                button.html('<i class="fas fa-spinner fa-spin me-2"></i>Adding...');
                button.prop('disabled', true);

                setTimeout(function() {
                    showToast('Product added to cart successfully!', 'success');

                    button.html('<i class="fas fa-cart-plus me-2"></i>Add to Cart');
                    button.prop('disabled', false);

                    updateCartCount();
                }, 1000);
            });

            function showToast(message, type) {
                const toast = $(`<div class="toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0 position-fixed bottom-0 end-0 m-3" role="alert">
                    <div class="d-flex">
                        <div class="toast-body">${message}</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>`);

                $('body').append(toast);
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();

                toast.on('hidden.bs.toast', function() {
                    $(this).remove();
                });
            }

            function updateCartCount() {
                // Implement cart count update
                console.log('Cart count updated');
            }
        });

        $(document).ready(function () {
            $('.add-to-cart').click(function () {
                const productId = $(this).data('product-id');
                const productName = $(this).data('product-name');
                const button = $(this);

                button.html('<i class="fas fa-spinner fa-spin me-2"></i>Adding...');
                button.prop('disabled', true);

                $.post('@Url.Action("Add", "Cart")', { productId: productId, quantity: 1 })
                    .done(function (response) {
                        if (response.success) {
                            showToast(productName + ' added to cart!', 'success');
                            $('.cart-count').text(response.cartCount);
                        } else {
                            showToast(response.message, 'error');
                        }
                    })
                    .fail(function () {
                        showToast('Error adding product to cart', 'error');
                    })
                    .always(function () {
                        button.html('<i class="fas fa-cart-plus me-2"></i>Add to Cart');
                        button.prop('disabled', false);
                    });
            });

            function showToast(message, type) {
                // Your existing toast function
            }
        });
    </script>
}